<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="com.example.android.styletransfer.StyleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/back6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-5dp">

                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/thumb2"
                    android:max="100"
                    android:progress="0"/>

                <TextView
                    android:id="@+id/seekbarnum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="强度"
                    android:textColor="@color/colorChoice3"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorChoice3"
                android:text="——————基础滤镜——————"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="9">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/origin"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:scaleType="centerInside"
                            android:background="@drawable/shape"
                            android:text="原图"
                            android:textColor="@color/colorChoice3"
                            android:textSize="25px"
                            android:onClick="origin"/>

                        <Button
                            android:id="@+id/light"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:scaleType="centerInside"
                            android:background="@drawable/shape"
                            android:text="亮度"
                            android:textColor="@color/colorChoice3"
                            android:textSize="25px"
                            android:onClick="light"/>

                        <Button
                            android:id="@+id/contrast"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:scaleType="centerInside"
                            android:background="@drawable/shape"
                            android:text="对比度"
                            android:textColor="@color/colorChoice3"
                            android:textSize="25px"
                            android:onClick="contrast"/>

                        <Button
                            android:id="@+id/saturation"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:scaleType="centerInside"
                            android:background="@drawable/shape"
                            android:text="饱和度"
                            android:textColor="@color/colorChoice3"
                            android:textSize="25px"
                            android:onClick="saturation"/>


                        <Button
                            android:id="@+id/baw"
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:scaleType="centerInside"
                            android:background="@drawable/shape"
                            android:text="黑白"
                            android:textColor="@color/colorChoice3"
                            android:textSize="25px"
                            android:onClick="baw"/>


                    </LinearLayout>

                </HorizontalScrollView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/right"
                    android:layout_weight="1"/>

            </LinearLayout>

            <!--<View-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:background="@color/colorPink"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorChoice3"
                android:text="——————风格转换——————"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="9">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/style1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/style1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            android:text="Starry"
                            android:textSize="10dp"
                            android:textColor="@color/colorChoice3"
                            android:paddingTop="47dp"
                            android:onClick="starry"
                            />

                        <Button
                            android:id="@+id/style2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/style2"
                            android:layout_marginRight="20dp"
                            android:text="Wreck"
                            android:textSize="10dp"
                            android:textColor="@color/colorChoice3"
                            android:paddingTop="47dp"
                            android:onClick="wreck"
                            />

                        <Button
                            android:id="@+id/style3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/style3"
                            android:text="Wave"
                            android:textSize="10dp"
                            android:textColor="@color/colorChoice3"
                            android:paddingTop="47dp"
                            android:onClick="wave"
                            />


                    </LinearLayout>

                </HorizontalScrollView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/right"
                    android:layout_weight="1"/>


            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/shape"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorChoice3"
                android:textSize="35px"
                android:text="D O N E"
                android:onClick="gosave"/>

        </LinearLayout>


        
    </ScrollView>

</android.support.constraint.ConstraintLayout>
